{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$defs": {
        "command": {
            "type": "string",
            "not": {
                "pattern": "\\{seed.*\\{seed"
            }
        },
        "config": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "random_salt": {
                    "type": "string"
                },
                "solution": {
                    "type": "string",
                    "$ref": "#/$defs/filepath",
                    "pattern": "^/"
                }
            }
        },
        "data_dict": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^[a-zA-Z0-9_][a-zA-Z0-9_.-]{0,254}$": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/test_group"
                        },
                        {
                            "$ref": "#/$defs/test_case"
                        }
                    ]
                }
            }
        },
        "data_list": {
            "type": "object",
            "additionalProperties": true
        },
        "dirpath": {
            "type": "string",
            "pattern": "^([a-zA-Z0-9_][a-zA-Z0-9_.-]{0,254}/)*[a-zA-Z0-9_][a-zA-Z0-9_.-]{0,254}$"
        },
        "filepath": {
            "type": "string",
            "pattern": "^/?([a-zA-Z0-9_][a-zA-Z0-9_.-]{0,254}/)*[a-zA-Z0-9_][a-zA-Z0-9_.-]{0,254}$"
        },
        "path": {
            "anyOf": [
                {
                    "$ref": "#/$defs/dirpath"
                },
                {
                    "$ref": "#/$defs/filepath"
                }
            ]
        },
        "test_case": {
            "anyOf": [
                {
                    "type": "string",
                    "$ref": "#/$defs/command",
                    "not": {
                        "pattern": "^/"
                    }
                },
                {
                    "type": "object",
                    "additionalProperties": true,
                    "properties": {
                        "copy": {
                            "$ref": "#/$defs/dirpath"
                        },
                        "count": {
                            "anyOf": [
                                {
                                    "allOf": [
                                        {
                                            "type": "number"
                                        },
                                        {
                                            "type": "integer",
                                            "maximum": 100,
                                            "minimum": 1
                                        }
                                    ]
                                },
                                {
                                    "type": "array",
                                    "items": {
                                        "type": "integer"
                                    }
                                },
                                {
                                    "type": "string",
                                    "pattern": "^-?\\d+\\.\\.=-?\\d+$"
                                }
                            ]
                        },
                        "generate": {
                            "type": "string",
                            "$ref": "#/$defs/command",
                            "not": {
                                "pattern": "^/"
                            }
                        },
                        "interaction": {
                            "type": "string",
                            "pattern": "^([<>][^\\n]*\\n)+$"
                        },
                        "match": {
                            "anyOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "ans": {
                                            "anyOf": [
                                                {
                                                    "type": "string"
                                                },
                                                {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                }
                                            ]
                                        },
                                        "in": {
                                            "anyOf": [
                                                {
                                                    "type": "string"
                                                },
                                                {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        },
                        "yaml": {
                            "$ref": "#/$defs/test_case_settings"
                        }
                    },
                    "$ref": "#/$defs/config"
                }
            ]
        },
        "test_case_or_group_settings": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "args": {
                    "anyOf": [
                        {
                            "const": []
                        },
                        {
                            "type": "array",
                            "prefixItems": [
                                {
                                    "type": "string"
                                }
                            ],
                            "maxLength": 1,
                            "minLength": 1
                        }
                    ]
                },
                "full_feedback": {
                    "type": "boolean"
                },
                "input_validator_args": {
                    "anyOf": [
                        {
                            "const": []
                        },
                        {
                            "type": "array",
                            "prefixItems": [
                                {
                                    "type": "string"
                                }
                            ],
                            "maxLength": 1,
                            "minLength": 1
                        },
                        {
                            "type": "object",
                            "additionalProperties": {
                                "type": "array",
                                "prefixItems": [
                                    {
                                        "type": "string"
                                    }
                                ],
                                "maxLength": 1,
                                "minLength": 1
                            }
                        }
                    ]
                },
                "input_visualizer_args": {
                    "anyOf": [
                        {
                            "const": []
                        },
                        {
                            "type": "array",
                            "prefixItems": [
                                {
                                    "type": "string"
                                }
                            ],
                            "maxLength": 1,
                            "minLength": 1
                        }
                    ]
                },
                "output_validator_args": {
                    "anyOf": [
                        {
                            "const": []
                        },
                        {
                            "type": "array",
                            "prefixItems": [
                                {
                                    "type": "string"
                                }
                            ],
                            "maxLength": 1,
                            "minLength": 1
                        }
                    ]
                },
                "output_visualizer_args": {
                    "anyOf": [
                        {
                            "const": []
                        },
                        {
                            "type": "array",
                            "prefixItems": [
                                {
                                    "type": "string"
                                }
                            ],
                            "maxLength": 1,
                            "minLength": 1
                        }
                    ]
                }
            }
        },
        "test_case_settings": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "desc": {
                    "type": "string"
                },
                "hint": {
                    "type": "string"
                }
            },
            "$ref": "#/$defs/test_case_or_group_settings"
        },
        "test_group": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "data": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/data_dict"
                        },
                        {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/data_list"
                            }
                        }
                    ]
                },
                "include": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/dirpath"
                    }
                }
            },
            "$ref": "#/$defs/test_group_settings"
        },
        "test_group_settings": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "scoring": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "aggregation": {
                            "enum": [
                                "sum",
                                "min"
                            ]
                        },
                        "require_pass": {
                            "anyOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "array",
                                    "prefixItems": [
                                        {
                                            "type": "string"
                                        }
                                    ],
                                    "maxLength": 1,
                                    "minLength": 1
                                }
                            ]
                        },
                        "score": {
                            "anyOf": [
                                {
                                    "type": "number",
                                    "exclusiveMinimum": 0
                                },
                                {
                                    "const": "unbounded"
                                }
                            ]
                        }
                    },
                    "required": [
                        "require_pass"
                    ]
                },
                "static_validation": {
                    "anyOf": [
                        {
                            "const": false
                        },
                        {
                            "const": true
                        },
                        {
                            "type": "object",
                            "properties": {
                                "args": {
                                    "type": "string"
                                },
                                "score": {
                                    "type": "integer"
                                }
                            }
                        }
                    ]
                }
            },
            "$ref": "#/$defs/test_case_or_group_settings"
        }
    },
    "type": "object",
    "additionalProperties": true,
    "properties": {
        "data": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "invalid_answer": {
                    "$ref": "#/$defs/test_group"
                },
                "invalid_input": {
                    "$ref": "#/$defs/test_group"
                },
                "invalid_output": {
                    "$ref": "#/$defs/test_group"
                },
                "sample": {
                    "$ref": "#/$defs/test_group"
                },
                "secret": {
                    "$ref": "#/$defs/test_group"
                },
                "valid_output": {
                    "$ref": "#/$defs/test_group"
                }
            },
            "required": [
                "sample",
                "secret"
            ]
        },
        "generators": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9_][a-zA-Z0-9_.-]{0,254}$": {
                    "allOf": [
                        {
                            "prefixItems": [
                                true
                            ]
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "$ref": "#/$defs/path",
                                "not": {
                                    "pattern": "^/"
                                }
                            },
                            "minLength": 1
                        }
                    ]
                }
            }
        },
        "version": {
            "type": "string"
        }
    },
    "$ref": "#/$defs/test_group_settings",
    "required": [
        "data"
    ]
}
